@using BlazorDynamicForm.Attributes
@{
	if (BoxAttribute.Visibility == BoxAttribute.BoxVisibility.Visible)
	{
		if (_status)
		{
			<div class="rounded border p-0 shadow-sm">
				<div class="row">
					<div class="col">
						<div class="row pb-2">
							<div class="col input-group">
								<span class="input-group-text">
									<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
										<path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
									</svg>
								</span>
								<span class="input-group-text flex-grow-1">@PropertyName</span>
								<Button @onclick="Close" class="btn btn-outline-secondary" type="button">Close</Button>
							</div>
						</div>
						@ChildContent
					</div>
				</div>
			</div>

		}
		else
		{
			<div class="row">
				<div class="col input-group">
					<span class="input-group-text">
						<svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box" viewBox="0 0 16 16">
							<path d="M8.186 1.113a.5.5 0 0 0-.372 0L1.846 3.5 8 5.961 14.154 3.5zM15 4.239l-6.5 2.6v7.922l6.5-2.6V4.24zM7.5 14.762V6.838L1 4.239v7.923zM7.443.184a1.5 1.5 0 0 1 1.114 0l7.129 2.852A.5.5 0 0 1 16 3.5v8.662a1 1 0 0 1-.629.928l-7.185 2.874a.5.5 0 0 1-.372 0L.63 13.09a1 1 0 0 1-.63-.928V3.5a.5.5 0 0 1 .314-.464z" />
						</svg>
					</span>
					<span class="input-group-text flex-grow-1">@PropertyName</span>
					<Button @onclick="Open" class="btn btn-outline-secondary" type="button">Open</Button>
				</div>
			</div>
		}

	}
	else
	{
		@ChildContent
	}
}
@code {
	private bool _status = false;
	[Parameter] public BoxAttribute BoxAttribute { get; set; }

	[Parameter] public RenderFragment? ChildContent { get; set; }

	[Parameter] public string PropertyName { get; set; }
	private void Open()
	{
		_status = true;
	}

	private void Close()
	{
		_status = false;
	}

}
